<idea-plugin>
    <id>org.example.code-snapshot</id>
    <name>CodeSnapshot</name>
    <vendor email="mohakpuri1712@gmail.com">Mohak Puri</vendor>

    <description>
        <![CDATA[
      This plugin allows you to capture and edit code snip it.
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="CodeSnapshot" anchor="right" factoryClass="SnapToolWindow"/>
        <editorFactoryMouseMotionListener implementation="SelectionHandler"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="SelectorAction" class="SelectionHandler" text="Code Snapshot"
                description="Creates snapshot for your code">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>